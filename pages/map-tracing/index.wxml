<view class="page-body">
  <view class="page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 250px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    ></map>
  </view>
  <van-cell-group>
    <van-cell size="large">
      <van-row>
        <van-col span="8">
          <van-checkbox value="{{ direction_checked }}" bind:change="onChange">正方向</van-checkbox>
        </van-col>
        <van-col span="8">
          <view>{{direction_name}}</view>
        </van-col>
      </van-row>
    </van-cell>
  </van-cell-group>

  <van-cell-group>
    <van-cell size="large">
      <van-col>
        <van-button plain bindtap="startStopLocation" type="primary">{{ btnText }}</van-button>
      </van-col>
      <van-col span="8">
        <van-button plain bindtap="includePoints" type="info">显示所有站点</van-button>
      </van-col>
    </van-cell>
  </van-cell-group>

  <van-cell-group>
    <van-cell size="large"> 
      <van-col><view>到达站点: </view></van-col>
      <van-col span="8">{{arrive_station_name}}</van-col>
    </van-cell>
    <van-cell size="large">
      <van-col><view>下一站点: </view></van-col>
      <van-col span="8">{{next_station_name}}</van-col>
    </van-cell>
    <van-cell size="large">
      <van-col><view>距离: </view></van-col>
      <van-col span="8">{{next_station_distance}}米</van-col>
    </van-cell>
  </van-cell-group>
    <!--
    <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button>
    <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
    
    <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button>
    -->
</view>

